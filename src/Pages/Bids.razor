@page "/bids"

@inject AuthenticationStateProvider AuthProvider
@inject IUserService _userService
@inject IBidService _bidService

<PageTitle>Minhas licitações</PageTitle>

@if (bids == null)
{
    <p>Carregando...</p>
}
else
{
    <div class="flex flex-row items-baseline space-x-2">
        <p class="text-4xl font-bold">Minhas Licitações</p>
        <p class="text-sm">(@bids.Count() a decorrer)</p>
    </div>

    <ul class="flex flex-col my-6 space-y-6">
    @foreach (var bid in bids)
    {
        <li class="relative flex items-center justify-between px-6 py-5 bg-pcs-lightest-gray rounded-xl border">
            <div class="flex items-center gap-x-4 w-1/3 flex-none">
                @if (bid.Auction.Product.Images.Count >= 1)
                {
                    <img class="object-scale-down h-24 w-24 flex-none bg-pcs-lightest-gray " src="@bid.Auction.Product.Images[0]">
                }
                else
                {
                    <div class="h-24 w-24 flex-none rounded-full bg-gray-50"></div>
                }
                <div class="min-w-0 flex-auto">
                    <div class="flex flex-row items-center">
                        <p class="text-3xl font-semibold leading-6 text-gray-900">
                            @bid.Auction.Product.Model.Name
                        </p>
                    </div>
                    <p class="mt-1 flex items-center space-x-1 text-sm leading-5">
                        @* TODO: If the auction was cancelled, a cross should be displayed instead *@
                        <svg class="w-4 h-4" viewBox="0 0 48 48" fillCurrentColor="currentColor">
                            <path
                                d="M 24 4 C 12.972066 4 4 12.972074 4 24 C 4 35.027926 12.972066 44 24 44 C 35.027934 44 44 35.027926 44 24 C 44 12.972074 35.027934 4 24 4 z M 24 7 C 33.406615 7 41 14.593391 41 24 C 41 33.406609 33.406615 41 24 41 C 14.593385 41 7 33.406609 7 24 C 7 14.593391 14.593385 7 24 7 z M 22.476562 11.978516 A 1.50015 1.50015 0 0 0 21 13.5 L 21 24.5 A 1.50015 1.50015 0 0 0 21.439453 25.560547 L 26.439453 30.560547 A 1.50015 1.50015 0 1 0 28.560547 28.439453 L 24 23.878906 L 24 13.5 A 1.50015 1.50015 0 0 0 22.476562 11.978516 z">
                            </path>
                        </svg>
                        @* FIXME: This function is not working properly *@
                        @*
                TODO: The text color should follow these requirements:
                - If the auctino is close to ending (1 hour, for example) -> pcs-red
                - If the auction has already ended -> gray
                - If the auction was cancelled -> even more gray
                *@
                    <p>@ViewUtils.PrettyDisplayDateTime(bid.Auction.End)</p>
                    </p>
                </div>
            </div>
            <div class="flex flex-col items-center justify-between gap-x-4 flex-none">
                <div class="border py-0.25 px-3 mb-2 rounded-xl text-xs bg-white">@bid.Auction.Product.Model.Color</div>
                @if (@bid.Auction.Product.Model.Storage != null)
                {
                    <div class="border py-0.25 px-3 rounded-xl text-xs bg-white">@bid.Auction.Product.Model.Storage</div>
                }
            </div>
            <div class="flex items-center justify-between gap-x-4 w-1/2 flex-none">
                <div class="flex flex-col items-center">
                    <p class="text-lg font-medium">Licitou</p>
                    <p class="text-3xl font-bold text-pcs-red underline">@Math.Round(bid.Auction.CurrentPrice, 2)€</p>
                    @* FIXME: Should be the actual date of the last bid *@
                    <p class="text-xs">ontem às 17h30</p>
                </div>
                <div class="flex flex-col items-center">
                    <p class="text-lg font-medium">Melhor</p>
                    <p class="text-3xl font-bold text-pcs-green underline">@Math.Round(bid.Auction.CurrentPrice, 2)€</p>
                    @* FIXME: Bidder should come from the database *@
                    <p class="text-xs">De <span class="text-gray-700">João Mafioso</span></p>
                </div>
                <div class="flex flex-col items-center space-y-1">
                    <NavLink href="@($"/auction/{bid.Auction.ID}")"
                        class="bg-pcs-green hover:bg-scs-green rounded-lg text-white font-bold text-lg py-1 px-3">
                        Ver detalhes
                    </NavLink>
                    @* FIXME: Should have the real number of bids *@
                    <p class="text-sm">7 licitações</p>
                </div>
            </div>
        </li>
    } 
    </ul>
}

@code {
    private List<BidModel>? bids { get; set; }
    private BidderModel? bidder;

    protected override async Task OnInitializedAsync()
    {
        var ourProvider = (AuthProvider)AuthProvider;
        string? email = await ourProvider.GetEmail();
        if (email != null)
        {
            bidder = await _userService.GetBidder(email);
            if (bidder != null)
            {
                bids = await _bidService.GetLastUserBids(bidder.NIF);
                for (int i = 0; i < bids.Count; i++) {
                    Console.WriteLine(bids[i].Auction.Product.Images[0]);
                }
            }
        }
    }
}
